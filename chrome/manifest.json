{
	"name": "Slow for you?",
	"version": "0.3",
	"manifest_version": 2,
	"description": "Figure out if the Internet's slow for everyone in your office.",
	"permissions": ["http://slow4u.herokuapp.com/"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["reporter.js"]
		}
	],
    "browser_action": {
        "default_title": "Slow4U?",
        "default_icon": "connecting.png"
	},
	"background": {
		"scripts": ["background.js"]
	}
}
